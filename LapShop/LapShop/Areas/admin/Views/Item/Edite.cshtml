@model ItemModel

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Form elements </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Forms</a></li>
                <li class="breadcrumb-item active" aria-current="page">Form elements</li>
            </ol>
        </nav>
    </div>
    <form class="forms-sample" method="post" enctype="multipart/form-data"
          asp-controller="Item" asp-action="Save" role="form">
        <div class="row">

            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Default form</h4>
                        <p class="card-description"> Basic form layout </p>

                        <input type="hidden" asp-for="ItemId" />
                        <div class="form-group">
                            <label for="exampleInputUsername1">ItemName</label>
                            <input asp-for="ItemName" type="text" class="form-control" placeholder="ItemName">
                            <span asp-validation-for="ItemName"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputUsername1">CategoryName</label>
                            <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.LstCategoryid, "Categoryid", "CategoryName"))"></select>
                            <span asp-validation-for="CategoryId"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputUsername1">SalesPrice</label>
                            <input asp-for="SalesPrice" type="text" class="form-control" placeholder="SalesPrice">
                            <span asp-validation-for="SalesPrice"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputUsername1">PurchasePrice</label>
                            <input asp-for="PurchasePrice" type="text" class="form-control" placeholder="PurchasePrice">
                            <span asp-validation-for="PurchasePrice"></span>
                        </div>

                     

                        <div class="form-group">
                            <label for="exampleInputUsername1">
                                Image
                            </label>
                            <input asp-for="ImageName" type="file" name="Files" multiple
                                   class="form-control" placeholder="Image"
                                   onchange="Upload.UploadDefaultImg(event)" accept=".jpg, .jpeg, .png, ,.gif">

                        </div>
                        <span id="tbImgName"></span>
                        <div id="tbImgSrc">
                            <img src="/Uploads/Items/@Model.ImageName" style="width:95%; height300px;" />
                        </div>

                        <button type="submit" formmethod="post" class="btn btn-gradient-primary me-2">Save</button>
                        <button class="btn btn-light">New</button>

                    </div>
                </div>
            </div>

          


        </div>
    </form>
</div>

@section Scripts
{
    <script>
        var Upload = {
            UploadDefaultImg: function(e) {
                const file = e.target.files[0];
                const reader = new FileReader();
                reader.onloadend = () => {
                    CourseMediaImgName = file.name;
                    CourseMediaImgBase64 = reader.result.slice(reader.result.indexOf('base64,') + 7);
                    $("#tbImgName").html(file.name)
                    $("#tbImgSrc").html(`<img class="thumbnail" src = "${reader.result}"  style = "width: 200px;height: 300px;border-radius: 5px;border: 1px solid #d9d9d9;padding: 1px;" />`)
                };
                reader.readAsDataURL(file);
            }
        }
    </script>
}

