@model List<VwItemImage>
<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic Table</h4>
            <p class="card-description">
                Add class <code>.table</code>
            </p>
            <a href="/admin/ItemImages/Edite">New</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>Image</th>

                        <th>Itemname</th>
                       
                        <th>Edite</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="py-1">
                                <img src="~/Uploads/ItemImages/@item.ImageName" alt="image">
                            </td>
                            <td>@item.ItemName</td>
                          
                            <td>
                                <a asp-controller="ItemImages" asp-action="Edite" asp-route-id="@item.ImageId">Edite</a>
                            </td>
                            <td>
                                <a asp-controller="ItemImages" asp-action="Delete" asp-route-id="@item.ImageId">Delete</a>
                            </td>
                        </tr>
                    }
                  
                 
                </tbody>
            </table>
        </div>
    </div>
</div>
