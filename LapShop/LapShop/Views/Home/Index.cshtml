@model VmHomePage

<!-- header end -->
<!-- Home slider -->
<section class="p-0 layout-7">
    <div class="slide-1 home-slider">
        @foreach (var slider in Model.LstitemCategory)
        {
            <div>
                <div class="home text-left">
                    <img src="~/Uploads/Categories/@slider.CategoryImageName" alt="" class="bg-img blur-up lazyload">
                    <div class="container-fluid custom-container">
                        <div class="row">
                            <div class="col">
                                <div class="slider-contain">
                                    <div>
                                        <h4>@slider.CategoryName</h4>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<!-- Home slider end -->
<!-- collection banner -->

<!-- collection banner end -->
<!-- Paragraph-->
<div class="title1 section-t-space">
    <h4>special offer</h4>
    <h2 class="title-inner1">today's deal</h2>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="product-para">
                <p class="text-center">
                    Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                    Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,
                </p>
            </div>
        </div>
    </div>
</div>
<!-- Paragraph end -->
<!-- Product section -->
<section class="pt-0 section-b-space ratio_asos">
    <div class="container">
        <div class="row game-product grid-products">
            @foreach (var item in Model.LstitemCategory)
            {
                <div class="product-box col-xl-2 col-lg-3 col-sm-4 col-6">
                    <div class="img-wrapper">
                        <div class="front">
                            <a asp-controller="ItemDetails" asp-action="ItemDetails" asp-route-id="@item.ItemId">
                                <img src="~/Uploads/Items/@item.ItemImageName"
                                     class="img-fluid blur-up lazyload bg-img" alt="">
                            </a>
                        </div>
                        <div class="cart-info cart-wrap">
                            <a asp-controller="Order" asp-action="AddToCart"
                               asp-route-itemId="@item.ItemId"
                               title="Add to Wishlist" tabindex="0">
                                <i class="ti-heart"
                                   aria-hidden="true"></i>
                            </a>
                            <a href="#" data-toggle="modal" data-target="#quick-view" title="Quick View" tabindex="0">
                                <i class="ti-search" aria-hidden="true"></i>
                            </a>
                            <a href="compare.html" title="Compare" tabindex="0">
                                <i class="ti-reload"
                                   aria-hidden="true"></i>
                            </a>
                        </div>
                        <a asp-controller="Order" asp-action="AddToCart"
                           asp-route-itemId="@item.ItemId" class="add-button">
                            add to
                            cart
                        </a>
                    </div>
                    <div class="product-detail">
                        <div class="rating">
                            <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                        </div>
                        <a href="product-page(no-sidebar).html">
                            <h6>@item.ItemName</h6>
                        </a>
                        <h4>$@item.SalesPrice</h4>
                    </div>
]                </div>
            }

        </div>
    </div>
</section>
<!-- Product section end -->
